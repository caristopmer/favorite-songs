<%= form_tag(sessions_path, method: "post") do %>

<% if @errors %>
    <div id="errors">
      <h2><%= pluralize(@errors.count, "error") %> prevented this login.</h2>
      <ul>
        <% @errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<p>
<%= label_tag(:email) %>
<%= email_field_tag(:email) %>
</p>
<p>
<%= label_tag(:password) %>
<%= password_field_tag(:password) %>
</p>
<%= submit_tag("Log In") %>

<% end %>